body {
    font-family: 'Josefin Sans', sans-serif;
    line-height: 1.1rem;
}

a {
    text-decoration: none;
    color: black;
}

img {
    width: 100%;
}

.frame {
    max-width: 70rem;
    margin: auto;
    border: solid;
    border-width: 0.5rem;
    box-shadow: 0 0 20px;
    height: 100rem;
    /*
    padding: 1rem;
    */
}

.navigation-container {
    border-bottom-style: solid;
    border-bottom-width: 0.5rem;
}

.navigation-item {
    height: 3.5rem;
    float: right;
}

.navigation-content {
    height: calc(100% - 0.2rem);
    border-left-style: solid;
    border-left-width: 0.5rem;
    text-align: center;
    padding: 0.2rem;
}

.navigation-content:nth-of-type(2) {
    border-left-style: none;
    background: pink;
}

.active {
    border-width: 0.3rem;
}

.leftCol {
    background: pink;
}

.rightCol {
    background: blue;
}

.workslist {
    height: 16rem;
    border-style: solid;
    border-width: 0.3rem;
    overflow: hidden;
}


@media (min-width: 40rem) {
    .navigation-item {
        width: calc(100%/8);
    }
    .leftCol {
        width: 50%;
        height: 100%;
        float: left;
    }
    .rightCol {
        width: calc(50% - 0.5rem);
        height: 100%;
        float: right;
        border-left-style: solid;
        border-left-width: 0.5rem;
    }
    .workslist {
        float: left;
        width: calc(100%/4 - 0.5rem);
    }
}
@media (max-width: 40rem) {
    .navigation-item {
        width: calc(100%/4);
    }
    #first_link {
        border-left-style: none;
    }
    .leftCol {
        width: 100%;
        height: 30%;
        border-bottom-style: solid;
        border-bottom-width: 0.5rem;
    }
    .rightCol {
        width: 100%;
        height: 40%;
    }
    .workslist {
        width: 100%;
    }
}
